<% message = pluralize(@user.errors.count, "λάθος", "λάθη") + " εμπόδισαν την αλλαγή του κωδικού: <br />" %>
<% @user.errors.full_messages.each do |msg| %>
	<% message = "#{message}#{msg}"+"<br />" %>
<% end %>

<div id = "password_edit" class="span4">
	<%= form_for @user, :url => password_reset_path(params[:id]) do |f| %>
		<legend>Επαναφορά κωδικού</legend>
		<% if @user.errors.any? %>
			<% flash.now[:error] =  message.html_safe %>
		<% end %>
		<p>
			<%= f.label 'Κωδικός' %>
			<%= f.password_field :password %>
		</p>
		<p>
			<%= f.label 'Επιβεβαίωση κωδικού' %>
			<%= f.password_field :password_confirmation %>
		</p>
		<p>
			<%= f.submit "Αλλαγή κωδικού", :class => "btn" %>
		</p>
	<% end %>
</div>