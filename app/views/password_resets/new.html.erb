<div id = "password_reset" class="span4">
	<%= form_tag password_resets_path, :method => :post do %>
	<legend>Reset password</legend>
		<p>
			<%= label_tag :email %>
			<%= text_field_tag :email, params[:email] %>
		</p>
		<p>
			<%= submit_tag "Reset Password", :class => "btn" %>
		</p>
	<% end %>
</div>
