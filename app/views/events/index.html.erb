<h2>Events Listing</h2>

<table class = "table table-bordered">
	<thead>
		<tr>  
			<th class = "span3">Event Name</th>  
			<th class = "span7">Event Content</th>  
			<th class = "span2">Event Time</th>
			<th>Controls</th>
		</tr>
	</thead>  
<% @events.each do |event| %>
<tbody>
	<tr>
		<td><%= event.name %></td>
		<td><%= event.content %></td>
		<td><%= event.ev_date %></td>
		<td>
			<div>
				<%= button_to 'Show', event, :class => "btn btn-primary pull-right", :method => :get %>
    			<%= button_to 'Edit', edit_event_path(event), :class => "btn btn-info pull-right", :method => :get %>
    			<%= button_to 'Destroy', event,:class => "btn btn-danger pull-right", method: :delete, data: { confirm: 'Are you sure?' } %>
    		</div>
    	</td>
	</tr>
<% end %>
</table>

<br />

<%= button_to 'New Event', new_event_path, :class => "btn", :method => :get %>