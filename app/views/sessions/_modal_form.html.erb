<%= form_tag sessions_path do %>
	<div class="modal-body">
		<p>
			<%= label_tag 'E-mail' %><br />
			<%= text_field_tag :email, params[:email] %>
		</p>
		<p>
			<%= label_tag 'Κωδικός' %><br />
			<%= password_field_tag :password %>
		</p>
		<p>
			<%= link_to "Ξέχασα τον κωδικό μου", new_password_reset_path %>
		</p>
		<p>
			<%= check_box_tag :remember_me, 1, params[:remember_me], :class => "checkbox"%>
			<%= label_tag 'Να με θυμάσαι', nil, :class => "checkbox", :id => "remember_label"  %>
		</p>
	</div>
	<div class="modal-footer">
		<button class="btn" data-dismiss="modal" aria-hidden="true">Κλείσιμο</button>
		<%= submit_tag "Σύνδεση", :class => "btn btn-primary" %>
	</div>
<% end %>