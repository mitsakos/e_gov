<%= form_tag sessions_path do %>
	<p>
		<%= label_tag 'E-mail' %><br />
		<%= text_field_tag :email, params[:email] %>
	</p>
	<p>
		<%= label_tag 'Κωδικός' %><br />
		<%= password_field_tag :password %>
	</p>
	<p>
		<%= link_to "Ξέχασα τον κωδικό μου", new_password_reset_path %>
	</p>
	<p>
		<%= check_box_tag :remember_me, 1, params[:remember_me], :class => "checkbox"%>
		<%= label_tag 'Να με θυμάσαι', nil, :class => "checkbox", :id => "remember_label"  %>
	</p>
	<p>
		<%= submit_tag "Σύνδεση", :class => "btn" %>
	</p>
<% end %>