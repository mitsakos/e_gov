<h2><%= @topic.title %></h2>
<ul class="breadcrumb">
	<li>
		<%= link_to 'Rails forums', forums_path %> <span class="divider">/</span>
	</li>
	<li>
		<%= link_to @topic.forum.title, @topic.forum %> <span class="divider">/</span>
	</li>
	<li class="active">
		<%= @topic.title %>
	</li>
</ul>
<table class = "table table-bordered">
	<thead>
		<tr>  
			<th class = "span3">User</th>  
			<th class = "span9">Message</th>  
		</tr>
	</thead>  
	<% for reply in @reply %>
		<tbody>
			<tr>  
				<td>
					<%= reply.user.username %><br />Registered: <%= reply.user.created_at %>
				</td>
				<td id = "reply">
					<div id = "reply_info"><%= reply.created_at %></div>
					<%= reply.body %>
					<% if admin? || is_owner(reply) %>
						<%= button_to 'Edit', edit_forum_topic_reply_path(reply.topic.forum.id, reply.topic.id, reply.id), :id => "reply_edit", :class => "btn btn-info pull-right", :method => :get %><br />
						<%= button_to 'Destroy', forum_topic_reply_path(reply.topic.forum.id, reply.topic.id, reply.id), method: :delete, :id => "reply_destroy", data: { confirm: 'Are you sure?' }, :class => "btn btn-danger pull-right" %>
					<% end %>  
				</td>  
			</tr>
		</tbody>  
	<% end %>  
</table>
<%= paginate @reply %>

<%= form_for([@forum, @topic, @topic.replies.build])  do |f| %>  
	<% if current_user %>
		<p> 
			<%= f.text_area :body %>
		</p>
  		<p>
			<%= f.submit "Reply", :class => "btn" %>
		</p>
	<% else %>
		<p>
			You need to log in to reply
		</p>
	<% end %>

<% end %>