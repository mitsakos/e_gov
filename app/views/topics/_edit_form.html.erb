<% message = pluralize(@topic.errors.count, "error") + " prohibited this topic from being saved: <br />" %>
<% @topic.errors.full_messages.each do |msg| %>
	<% message = "#{message}#{msg}"+"<br />" %>
<% end %>

<%= form_for(@topic, :url => forum_topic_path) do |f| %>
	<% if @topic.errors.any? %>
		<% flash.now[:error] =  message.html_safe %>
	<% end %>
	<p>
		<%= f.label :title %><br />
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.submit "Done", :method => :get, :class => "btn" %>
	</p>

<% end %>