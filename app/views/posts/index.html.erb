<h1>Listing posts</h1>

<table class = "table">
  <tr>
    <th>Photo</th>
    <th>Title</th>
    <th>Content</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= image_tag post.photo.url(:small) %></td>
    <td><%= post.title %></td>
    <td><%= truncate(post.content, :length => 500, :separator => '.') %></td>
    <td><%= post.user.username %></td>
    <td><%= link_to 'Show', post %></td>
    <% if admin? %>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />
<% if admin? %>
<%= link_to 'New Post', new_post_path %>
<% end %>