<div class="row">
    <div class="span8">
        <% @posts.reverse.each do |post| %>
            <div class="post">
                <div class="row">
                    <div class="span2">
                        <%= image_tag post.photo.url(:small), :class => "img-rounded" %>
                    </div>
                    <div class="details span6">
                        <h3><%= post.title %></h3>
                        <p>
                            <%= truncate(post.content, :length => 500, :separator => '.') %>
                        </p>
                    </div>
                    <%= button_to 'Show', post, :class => "btn pull-right btn-primary", :method => :get %>
                    <% if admin? %>
                        <%= button_to 'Edit', edit_post_path(post), :class => "btn pull-right btn-info", :method => :get %>
                        <%= button_to 'Destroy', post, :method => :delete, data: { confirm: 'Are you sure?' }, :class => "btn pull-right btn-danger" %>
                    <% end %>
                </div><!-- end post row -->
            </div><!-- end post -->
        <% end %>
    </div><!-- end main area -->
    <%= render 'layouts/aside' %>
</div><!-- end row -->


<br />
<% if admin? %>
    <%= button_to 'New Post', new_post_path, :class => "btn", :method => :get%>
<% end %>

