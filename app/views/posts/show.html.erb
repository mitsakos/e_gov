

<p>
  	<b>Photo:</b>
  <%= image_tag @post.photo.url(:large) %>
</p>
<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Content:</b>
  <%= @post.content %>
</p>

<p>
  <b>User:</b>
  <%= @post.user.username %>
</p>

<div id="comments">
<h2>Comments</h2>
<%= render @post.comments %>
</div>

<% if current_user %>
<h2>Add a comment:</h2>
<div id = "comment_form">
<%= render "comments/form" %>
</div>
<% else %>
<p>You need to log in to comment</p>
<% end %>

<br />
<% if admin? %>
<%= link_to 'Edit', edit_post_path(@post) %> |
<% end %>
<%= link_to 'Back', posts_path %>
