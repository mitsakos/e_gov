<% message = pluralize(@poll.errors.count, "error") + " prohibited this poll from being saved: <br />" %>
<% @poll.errors.full_messages.each do |msg| %>
	<% message = "#{message}#{msg}"+"<br />" %>
<% end %>

<%= form_for(@poll) do |f| %>
	<% if @poll.errors.any? %>
		<% flash.now[:error] =  message.html_safe %>
	<% end %>

	<p class="field">
		<%= f.label :question %><br />
		<%= f.text_area :question %>
	</p>

	<%= f.fields_for :poll_options do |builder| %>
		<%= render 'options', :f => builder %>
	<% end %>

	<% if params[:action] == "new" %>
		<%= link_to_add_fields "Add Option", f, :poll_options %>
	<% end %>

	<p class="actions">
		<%= f.submit "Done", :class => "btn" %>
	</p>
<% end %>
