<!-- Determining class for each flash message setting
the correct class for bootstrap and showing the message-->

<% flash.each do |name, msg| %>
	<% if name == :notice %>
		<div id = "notification" class = "alert alert-info">
			<button type = "button" class = "close" data-dismiss = "alert">×</button>
			<%= msg %>
		</div><!-- end alert -->
	<% end %>
	<% if name == :alert %>
		<div id = "notification" class = "alert">
			<button type = "button" class = "close" data-dismiss = "alert">×</button>
			<%= msg %>
		</div><!-- end alert -->
	<% end %>
	<% if name == :error %>
		<div id = "notification" class = "alert alert-error">
			<button type = "button" class = "close" data-dismiss = "alert">×</button>
			<%= msg %>
		</div><!-- end alert -->
	<% end %>				
<% end %>