<h2>Forum</h2>
<table class = "table table-bordered" id = "forums_list">  
	<thead>
		<tr>
			<th class = "span8">Forum</th>  
			<th class = "span4">Last Post</th>
			<% if admin? %>
				<th>Controls</th>
			<% end %>
		</tr>
	</thead>
	<% @forums.each do |forum| %>
		<tbody>
			<tr>
				<td>
					<h4><%= link_to forum.title, forum %></h4>
					<small><%= pluralize(forum.topics.count, 'Topic', 'Topics') %></small><br />
					<%= forum.description %>
				</td>
				<td>
					<% if forum.most_recent_post %>
						<%= distance_of_time_in_words_to_now forum.most_recent_post.last_post_at %> ago by <%= forum.most_recent_post.user.username %>
					<% else %>
						no posts
					<% end %>
				</td>
				<% if admin? %>
					<td>
						<%= button_to 'Edit', edit_forum_path(forum), :class => "btn btn-info", :method => :get %>
						<%= button_to 'Destroy', forum, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
					</td>
				<% end %>
			</tr>
		</tbody>
	<% end %>
</table>
<br />
<% if admin? %>
	<%= button_to 'New Forum', new_forum_path, :class => "btn", :method => :get %>
<% end %>