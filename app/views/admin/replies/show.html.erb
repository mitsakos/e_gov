<div class = "dashboard_container">
    <div class = "well dashboard_navigation">
        <ul id = "admin_nav_list">
            <li><%= link_to 'Manage Users', admin_users_path %></li>
            <li><%= link_to 'Manage Posts', admin_posts_path %></li>
            <li><%= link_to 'Manage Comments', admin_comments_path %></li>
            <li><%= link_to 'Manage Forums', admin_forums_path %></li>
            <li><%= link_to 'Manage Topics', admin_topics_path %></li>
            <li><%= link_to 'Manage Forum Posts', admin_replies_path %></li>
            <li><%= link_to 'Manage Events', admin_events_path %></li>
            <li><%= link_to 'Manage Polls', admin_polls_path %></li>
        </ul>
    </div>


    <div class = "dashboard_content">
        <h2 class = "dashboard_header">Forum Post <%= @reply.id %></h2>
        <ul class = "breadcrumb well">
            <li><%= link_to "Dashboard", admin_path %> <span class="divider">/</span></li>
            <li><%= link_to "Forum Posts", admin_replies_path %> <span class="divider">/</span></li>
            <li><%= @reply.id %>
        </ul>
        <ul class="nav nav-tabs">
            <li class="active">
            	<%= link_to admin_reply_path(@reply) do %>
            		<i class = "icon-info-sign"></i> Show
            	<% end %>
            </li>
            <li>
            	<%= link_to edit_admin_reply_path(@reply) do %>
            		<i class = "icon-pencil"></i> Edit Forum Post</a>
            	<% end%>
            </li>
            <li>
                <%= link_to delete_admin_reply_path(@reply) do %>
                    <i class = "icon-remove"></i> Delete Forum Post</a>
                <% end%>
            </li>
        </ul>

        <div class="tab-content clear">
            <div class="tab-pane active" id="reply_list">
            	<div id = "reply_show">
					<span class = "label">Forum Post #<%= @reply.id %></span><h5><%= @reply.body %></h5>
				</div><!-- end reply_show -->
            </div><br />
        </div>
    </div>
</div>
