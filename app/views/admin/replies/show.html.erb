<div class = "dashboard_container">
    <div class = "well dashboard_navigation">
        <ul id = "admin_nav_list">
            <li><%= link_to 'Διαχείρηση χρηστών', admin_users_path %></li>
            <li><%= link_to 'Διαχείρηση αναρτήσεων', admin_posts_path %></li>
            <li><%= link_to 'Διαχείρηση σχολίων', admin_comments_path %></li>
            <li><%= link_to 'Διαχείρηση forum', admin_forums_path %></li>
            <li><%= link_to 'Διαχείρηση θεμάτων', admin_topics_path %></li>
            <li><%= link_to 'Διαχείρηση απαντήσεων', admin_replies_path %></li>
            <li><%= link_to 'Διαχείρηση συμβάντων', admin_events_path %></li>
            <li><%= link_to 'Διαχείρηση ψηφοφοριών', admin_polls_path %></li>
        </ul>
    </div>


    <div class = "dashboard_content">
        <h2 class = "dashboard_header">Απάντηση <%= @reply.id %></h2>
        <ul class = "breadcrumb well">
            <li><%= link_to "Διαχείρηση", admin_path %> <span class="divider">/</span></li>
            <li><%= link_to "Απαντήσεις", admin_replies_path %> <span class="divider">/</span></li>
            <li><%= @reply.id %>
        </ul>
        <ul class="nav nav-tabs">
            <li class="active">
            	<%= link_to admin_reply_path(@reply) do %>
            		<i class = "icon-info-sign"></i> Εμφάνιση απάντησης
            	<% end %>
            </li>
            <li>
            	<%= link_to edit_admin_reply_path(@reply) do %>
            		<i class = "icon-pencil"></i> Αλλαγή απάντησης</a>
            	<% end%>
            </li>
            <li>
                <%= link_to delete_admin_reply_path(@reply) do %>
                    <i class = "icon-remove"></i> Διαγραφή απάντησης</a>
                <% end%>
            </li>
        </ul>

        <div class="tab-content clear">
            <div class="tab-pane active" id="reply_list">
            	<div id = "reply_show">
					<span class = "label">Απάντηση #<%= @reply.id %></span><h5><%= @reply.body %></h5>
				</div><!-- end reply_show -->
            </div><br />
        </div>
    </div>
</div>
