<div class = "dashboard_container">
    <div class = "well dashboard_navigation">
        <ul id = "admin_nav_list">
            <li><%= link_to 'Manage Users', admin_users_path %></li>
            <li><%= link_to 'Manage Posts', admin_posts_path %></li>
            <li><%= link_to 'Manage Comments', admin_comments_path %></li>
            <li><%= link_to 'Manage Forums', admin_forums_path %></li>
            <li><%= link_to 'Manage Topics', admin_topics_path %></li>
            <li><%= link_to 'Manage Forum Posts', admin_replies_path %></li>
            <li><%= link_to 'Manage Events' %></li>
            <li><%= link_to 'Manage Polls' %></li>
        </ul>
    </div>


    <div class = "dashboard_content">
        <h2 class = "dashboard_header">Forum Posts List</h2>
        <ul class = "breadcrumb well">
            <li><%= link_to "Dashboard", admin_path %> <span class="divider">/</span></li>
            <li class = "active"><%= link_to "Forum Posts", admin_replies_path %></li>
        </ul>
        <ul class="nav nav-tabs">
            <li class="active">
            	<%= link_to admin_replies_path do %>
            		<i class = "icon-list"></i> List
            	<% end %>
            </li>
            <li>
            	<%= link_to new_admin_reply_path do %>
            		<i class = "icon-plus"></i> Add New</a>
            	<% end%>
            </li>
        </ul>

        <div class="tab-content clear">
            <div class="tab-pane active" id="reply_list">
            	<table class = "table table-striped table-condensed">
            		<thead>
						<tr>  
							<th>Body</th>  
							<th>Topic Title</th>  
							<th></th>
						</tr>
					</thead>
					<tbody>
		            	<% @replies.reverse.each do |reply| %>
		            		<tr>
		            			<td class = "span7"><%= reply.body %></td>
		            			<td><%= reply.topic.title %></td>
		            			<td>
		            				<%= link_to admin_reply_path(reply) do %>
										<i class="icon-info-sign"></i>
									<% end %>
									<%= link_to edit_admin_reply_path(reply) do %>
										<i class="icon-pencil"></i>
									<% end %>
									<%= link_to(admin_reply_path(reply), :method => :delete) do %>
										<i class="icon-remove"></i>
									<% end %>
								</td>	
		            		</tr>
		            	<% end %>
		            </tbody>
		        </table>
            </div><br />
        </div>
    </div>
</div>