<% message = pluralize(@event.errors.count, "error") + " prohibited this event from being saved: <br />" %>
<% @event.errors.full_messages.each do |msg| %>
	<% message = "#{message}#{msg}"+"<br />" %>
<% end %>

<%= form_for([:admin, @event],  :html => { :multipart => true, :id => "admin_event_form" }) do |f| %>

	<% if @event.errors.any? %>
		<% flash.now[:error] =  message.html_safe %>
	<% end %>

	<p>
		<%= f.label :name %><br />
		<%= f.text_field :name %>
	</p>
	<p>
		<%= f.label :content %><br />
		<%= f.text_area :content %>
	</p>
	<p>
		<%= f.label :ev_date %><br />
		<%= f.text_field :ev_date %>
	</p>
	<p>
		<%= f.file_field :photo, :class => "btn" %>
	</p>
	<p>
    <%= f.submit "Done", :class => "btn" %>
	</p>
<% end %>