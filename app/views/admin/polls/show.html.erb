<script type="text/javascript" charset="utf-8">

$(function () {
    var chart;
    $(document).ready(function() {
        
        // Radialize the colors
        Highcharts.getOptions().colors = $.map(Highcharts.getOptions().colors, function(color) {
            return {
                radialGradient: { cx: 0.5, cy: 0.3, r: 0.7 },
                stops: [
                    [0, color],
                    [1, Highcharts.Color(color).brighten(-0.3).get('rgb')] // darken
                ]
            };
        });
        
        // Build the chart
        chart = new Highcharts.Chart({
            chart: {
                renderTo: 'votes_chart',
                plotBackgroundColor: null,
                plotBorderWidth: null,
                plotShadow: false
            },
            title: {
                text: 'Votes Chart'
            },
            tooltip: {
                pointFormat: '{series.name}: <b>{point.percentage}%</b>',
                percentageDecimals: 1
            },
            plotOptions: {
                pie: {
                    allowPointSelect: true,
                    cursor: 'pointer',
                    dataLabels: {
                        enabled: true,
                        color: '#000000',
                        connectorColor: '#000000',
                        formatter: function() {
                            return '<b>'+ this.point.name +'</b>: '+ this.percentage.toFixed(1) +' %';
                        }
                    }
                }
            },
            series: [{
                type: 'pie',
                name: 'Vote Percentage',
                data: <%= raw create_table(@poll) %>
            }]
        });
    });
    
});

</script>

<div class = "dashboard_container">
    <div class = "well dashboard_navigation">
        <ul id = "admin_nav_list">
            <li><%= link_to 'Manage Users', admin_users_path %></li>
            <li><%= link_to 'Manage Posts', admin_posts_path %></li>
            <li><%= link_to 'Manage Comments', admin_comments_path %></li>
            <li><%= link_to 'Manage Forums', admin_forums_path %></li>
            <li><%= link_to 'Manage Topics', admin_topics_path %></li>
            <li><%= link_to 'Manage Forum Posts', admin_replies_path %></li>
            <li><%= link_to 'Manage Events', admin_events_path %></li>
            <li><%= link_to 'Manage Polls', admin_polls_path %></li>
        </ul>
    </div>


    <div class = "dashboard_content">
        <h2 class = "dashboard_header">Poll <%= @poll.id %></h2>
        <ul class = "breadcrumb well">
            <li><%= link_to "Dashboard", admin_path %> <span class="divider">/</span></li>
            <li><%= link_to "Polls", admin_polls_path %> <span class="divider">/</span></li>
            <li><%= @poll.id %>
        </ul>
        <ul class="nav nav-tabs">
            <li class="active">
                <%= link_to admin_poll_path(@poll) do %>
                    <i class = "icon-info-sign"></i> Show
                <% end %>
            </li>
            <li>
                <%= link_to edit_admin_poll_path(@poll) do %>
                    <i class = "icon-pencil"></i> Edit Poll</a>
                <% end%>
            </li>
            <li>
                <%= link_to delete_admin_poll_path(@poll) do %>
                    <i class = "icon-remove"></i> Delete Poll</a>
                <% end%>
            </li>
        </ul>

        <div class="tab-content clear">
            <div class="tab-pane active" id="poll_list">
                <div id = "poll_show">
                    <div id = "votes_chart"></div>
                    <div>
                        <span id = "poll_question_legend"><%= @poll.question %></span>
                        <%= form_for @poll.poll_options, :url => vote_admin_poll_path(@poll)  do |f| %>
                            <div class="radio_btn_container">
                                <table class = "table table-hover">
                                    <% @poll.poll_options.each do |option| %>
                                        <tbody>
                                            <tr>
                                                <td id = "radio_button_cell">
                                                    <%= radio_button :poll_option, :id, option.id, :checked => false %>
                                                </td>
                                                <td>
                                                    <%= label :poll_option, option.option %>
                                                </td>
                                            </tr>
                                        </tbody>
                                    <% end %>
                                </table>
                            </div>
                            <div class="actions">
                                <%= f.submit "Vote", :class => "btn" %>
                            </div>
                        <% end %>
                    </div>                  
                </div><!-- end poll_show -->
            </div><br />
        </div>
    </div>
</div>