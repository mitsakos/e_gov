<div id="calendar">
	<h2 id="month">
    	<%= link_to "<", :month => (@date.beginning_of_month-1).strftime("%Y-%m") %>
    	<%=h I18n.l(@date, format: :calendar) %>
    	<%= link_to ">", :month => (@date.end_of_month+1).strftime("%Y-%m") %>
	</h2>
	<%= calendar_for(@events, :year => @date.year, :month => @date.month) do |calendar| %>
		<%= calendar.head('Κυρ', 'Δευ', 'Τρι', 'Τετ', 'Πεμ', 'Παρ', 'Σαβ') %>
		<% calendar.day(:day_method => :ev_date) do |date, events| %>
			<%= date.day %>
			<ul>
				<% for event in events %>
					<li>
						<%= link_to h(event.name), event %>
					</li>
 				<% end %>
			</ul>
		<%end %>
	<% end %>
</div>