<div id = "parliament_rss">
	<% unless @parliament_rss.nil? %>
		<table class = "table table-striped table-bordered table-condensed">
			<thead>
				<tr>
					<th>Parliament: Press Releases</th>
				</tr>
			</thead>
			<tbody>
				<% @parliament_rss.each do |item| %>
					<tr>
						<td><%= link_to item.title, item.link, :target => "_blank" %></td>
					</tr>	
				<% end %>
			</tbody>
		</table>
	<% else %>
		<em>No connection with parliament.gr</em>
	<% end %>
</div>
